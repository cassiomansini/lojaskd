.panel {
    background-color white
    col(1/3)
    box-shadow 0 0 5px 3px alpha(black, .1)
    border-radius 3px
    padding 15px
    
    &.login-panel {
        col(1/3, offset: 1/3)
        
        +below(900px){
            col(1/2, offset: 1/4)
        }
        +below(600px){
            col(1)
        }
        
        .login-header {
            color azul
            margin-left -15px
            padding-left 11px
            border-left 4px solid azul
            font-weight 100
        }
    }

    .header-painel {
        text-transform uppercase
    }
    
    .info {
        font-size 16px
        font-family Roboto
        color #757575
    }
    
    .grey {
        color #bdbdbd
    }
    
    .green {
        color #4caf50
    }
}