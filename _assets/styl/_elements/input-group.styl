label.input-group {
    // border red
    display block
    
    position relative

    input {
        display block
        width 100%
        height 30px
        font-size 14px
        outline none
        border 0
        border-bottom 2px solid #e0e0e0
        
        &:hover {
            border-bottom-color #e0e0e0 - 20%
            transition 200ms
        }

        &:active,
        &.active,
        &:focus {
            border-bottom-color #039be5 !important
            transition 200ms
        }
    }
    
    &:hover > input {
        border-bottom-color #e0e0e0 - 20%
        transition 200ms            
    }
    
    span {
        position absolute
        cursor text
        top 50%
        transform translateY(-50%)
        transition 200ms
        color #757575
        pointer-events none
        font-size 12px
    }
    
    input:not([value=""]) + span,
    input:focus + span {
        // transform translate3d(0, 0, 0)
        font-size .7rem
        top -5px
    }
    input:focus + span {
        color #039be5
    }
    
    small.required {
        color #e53935
        font-size 9px
        position absolute
        right -7px
        top 0
    }
    
    .error {
        position absolute
        display none
        bottom 0
        left 50%
        transform translate3d(-50%, 55%, 0)
        background-color #e53935
        font-size 11px
        padding 3px 4px
        color white
        border-radius 3px
        
        &:before {
            position absolute
            content ''
            size(0px)
            border 5px solid transparent
            border-left-color #e53935
            z-index -1
            top -5px
            left 0
        }
    }
    
    &.error {
        input {
            border-bottom-color #e53935 !important
        }
        .error {
            display inline-block
        }
    }
}